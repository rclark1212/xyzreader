<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android"
    android:transitionOrdering="together"
    android:duration="500">
    <changeBounds/>
    <changeImageTransform/>
    <slide android:slideEdge="top">
        <targets>
            <target android:targetId="@id/collapsing_toolbar_layout" />
            <target android:targetId="@id/swipe_refresh_layout" />
        </targets>
    </slide>
    <slide android:slideEdge="bottom">
        <targets>
            <target android:targetId="@id/meta_bar" />
            <target android:targetId="@id/article_body" />
            <target android:targetId="@id/share_fab" />
        </targets>
    </slide>

</transitionSet>